<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    xmlns:seekarc="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="156dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top|left"
                    android:weightSum="1">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Vytvořit želvu"
                            android:id="@+id/button" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Smazat želvu"
                            android:id="@+id/button2" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Uložit program"
                            android:id="@+id/button3" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Zavřít aplikaci"
                            android:id="@+id/button8" />
                    </TableRow>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ListView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/listView"
                            android:fastScrollAlwaysVisible="true"
                            android:layout_gravity="bottom"
                            android:layout_above="@+id/editText4"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText4"
                            android:editable="false"
                            android:enabled="true"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right"
                    android:weightSum="1"
                    android:layout_margin="0dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="25dp">

                    <SurfaceView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/surfaceView"
                        android:layout_gravity="top|right"
                        android:background="#acd99f"
                        android:layout_above="@+id/linearLayout" />



                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="130dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:weightSum="1"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentStart="false"
                        android:id="@+id/linearLayout"
                        android:layout_alignWithParentIfMissing="false"
                        android:layout_alignParentTop="false"
                        android:layout_alignParentRight="false"
                        android:gravity="top|center_vertical|right|center_horizontal">


                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:baselineAligned="false"
                            android:gravity="center_vertical|center_horizontal">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vpřed"
                                android:id="@+id/button5" />

                            <EditText
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number|text"
                                android:ems="10"
                                android:id="@+id/editText"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:gravity="center_vertical|center_horizontal"
                                android:foregroundGravity="center_vertical|center_horizontal"
                                />

                            <SeekBar
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/seekBar"
                                android:layout_weight="0.16"
                                android:max="100"
                                android:indeterminate="false"
                                android:onClick="onClick" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:gravity="center_vertical|center_horizontal">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vzad"
                                android:id="@+id/button4" />

                            <EditText
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number|text"
                                android:ems="10"
                                android:id="@+id/editText2"
                                android:gravity="center_vertical|center_horizontal"
                                android:foregroundGravity="center_vertical|center_horizontal"
                                android:textAlignment="center"
                                android:textStyle="bold" />

                            <SeekBar
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/seekBar2"
                                android:layout_weight="0.10" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.18"
                            android:gravity="center_vertical|center_horizontal">


                            <FrameLayout
                                android:id="@+id/seekArcContainer"
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.21" >

                                <com.triggertrap.seekarc.SeekArc
                                    android:id="@+id/seekArc"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:padding="30dp"
                                    seekarc:max ="360"
                                    seekarc:rotation="90"
                                    seekarc:startAngle="0"
                                    seekarc:sweepAngle="360"
                                    seekarc:touchInside="true"
                                    seekarc:progressColor="@color/colorAccent"

                                    />

                                <TextView
                                    android:id="@+id/seekArcProgress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="0"
                                    android:textSize="40sp" />
                            </FrameLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:gravity="center_vertical|center_horizontal">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cyklus"
                                android:id="@+id/button7" />

                            <NumberPicker
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/numberPicker"
                                android:orientation="horizontal" />
                        </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="top|center_vertical|center_horizontal"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="top">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vyber barvu"
                            android:id="@+id/button9"
                            android:layout_gravity="top" />

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kreslení "
                            android:id="@+id/switch1"
                            android:allowUndo="false"
                            android:checked="false"
                            android:nestedScrollingEnabled="false"
                            android:singleLine="false"
                            android:splitTrack="false"
                            android:showText="false"
                            android:layout_marginTop="20dp" />



                    </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

        </TableLayout>
    </FrameLayout>

</RelativeLayout>