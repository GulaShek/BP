<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    xmlns:seekarc="http://schemas.android.com/apk/res-auto">


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="156dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top|left"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/mainMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Hlavní menu"
                        android:textSize="10sp"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Vytvořit želvu"
                            android:id="@+id/button"
                            android:background="@drawable/buttonshape"
                            android:shadowColor="#A8A8A8"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="5"

                            android:layout_margin="1dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Smazat plátno"
                            android:id="@+id/button2"
                            android:background="@drawable/buttonshape"
                            android:shadowColor="#A8A8A8"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="5"
                            android:layout_margin="1dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Vytvořit procedůru"
                            android:id="@+id/button3"
                            android:background="@drawable/buttonshape"
                            android:shadowColor="#A8A8A8"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="5"
                            android:layout_margin="1dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Vybrat proceduru"
                            android:id="@+id/btnChooseProcedure"
                            android:background="@drawable/buttonshape"
                            android:layout_margin="1dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Smazat příkazy"
                            android:id="@+id/button8"
                            android:background="@drawable/buttonshape"
                            android:shadowColor="#A8A8A8"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="5"
                            android:layout_margin="1dp"
                            />
                    </TableRow>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/commandList"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Přehled příkazů"
                            android:textSize="10sp"
                            android:layout_alignParentTop="true"
                            android:layout_centerInParent="true" />

                        <ListView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/listView"
                            android:layout_gravity="bottom"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="15dp"
                            android:layout_alignParentEnd="false"
                            android:layout_marginBottom="42dp" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Provést příkazy"
                            android:id="@+id/btnPlayCommands"
                            android:layout_alignParentStart="false"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/buttonshape_play" />

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right"
                    android:weightSum="1"
                    android:layout_margin="0dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="25dp">

                    <ImageView
                        android:id="@+id/rect2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="150dp"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentEnd="false"
                        android:background="#fffbb5"
                        android:layout_marginRight="20dp" />


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="130dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:weightSum="1"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentStart="false"
                        android:id="@+id/linearLayout"
                        android:layout_alignWithParentIfMissing="false"
                        android:layout_alignParentTop="false"
                        android:layout_alignParentRight="false"
                        android:gravity="top|center_vertical|right|center_horizontal">



                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:baselineAligned="false"
                            android:gravity="center_vertical|center_horizontal">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vpřed"
                                android:id="@+id/button5"
                                android:drawableLeft="@drawable/material_button_forward"
                                android:background="@drawable/buttonshape"
                                android:shadowColor="#A8A8A8"
                                android:shadowDx="0"
                                android:shadowDy="0"
                                android:shadowRadius="5"
                                android:layout_margin="2dp"
                                />

                            <EditText
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number|text"
                                android:ems="10"
                                android:id="@+id/editText"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:gravity="center_vertical|center_horizontal"
                                android:foregroundGravity="center_vertical|center_horizontal"
                                android:text="0" />

                            <SeekBar
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/seekBar"
                                android:layout_weight="0.16"
                                android:max="100"
                                android:indeterminate="false"
                                android:onClick="onClick"

                                android:thumb="@drawable/materialseekbar_green_thumb_drawable"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:gravity="center_vertical|center_horizontal">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vzad"
                                android:id="@+id/button4"
                                android:drawableLeft="@drawable/material_button_backward"
                                android:background="@drawable/buttonshape"
                                android:shadowColor="#A8A8A8"
                                android:shadowDx="0"
                                android:shadowDy="0"
                                android:shadowRadius="5"
                                android:layout_margin="2dp"
                                />

                            <EditText
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number|text"
                                android:ems="10"
                                android:id="@+id/editText2"
                                android:gravity="center_vertical|center_horizontal"
                                android:foregroundGravity="center_vertical|center_horizontal"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:text="0" />

                            <SeekBar
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/seekBar2"
                                android:layout_weight="0.10"

                                android:thumb="@drawable/materialseekbar_green_thumb_drawable" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.18"
                            android:gravity="center_vertical|center_horizontal">


                            <FrameLayout
                                android:id="@+id/seekArcContainer"
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.21" >

                                <com.triggertrap.seekarc.SeekArc
                                    android:id="@+id/seekArc"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:padding="30dp"
                                    seekarc:max ="360"
                                    seekarc:rotation="90"
                                    seekarc:startAngle="0"
                                    seekarc:sweepAngle="360"
                                    seekarc:touchInside="true"
                                    seekarc:progressColor="@color/colorAccent"
                                    seekarc:thumb="@drawable/materialseekbar_green_thumb_drawable"

                                    />

                                <TextView
                                    android:id="@+id/seekArcProgress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="0"
                                    android:textSize="40sp" />
                            </FrameLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:gravity="top|center_horizontal">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cyklus"
                                android:id="@+id/button7"
                                android:background="@drawable/buttonshape"
                                android:shadowColor="#A8A8A8"
                                android:shadowDx="0"
                                android:shadowDy="0"
                                android:shadowRadius="5"
                                android:layout_margin="2dp"
                                />

                            <com.vi.swipenumberpicker.SwipeNumberPicker
                                android:id="@+id/number_picker"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                app:snp_numberColor="@android:color/white"
                                app:snp_arrowColor="@android:color/white"
                                app:snp_backgroundColor="@color/colorAccent"
                                app:snp_max="10"
                                app:snp_min="0"
                                app:snp_value="0"
                                android:layout_marginTop="10dp" />

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="bottom|center"
                                android:gravity="center_vertical|center_horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Úhel: "
                                    android:id="@+id/twUhelInfo"
                                    android:layout_gravity="bottom|center" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0°"
                                    android:id="@+id/twUhel"
                                    android:layout_gravity="bottom|center|right" />
                            </TableRow>

                        </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="top|center_vertical|center_horizontal"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="top">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vyber barvu"
                            android:id="@+id/button9"
                            android:layout_gravity="top"
                            android:background="@drawable/buttonshape"
                            android:shadowColor="#A8A8A8"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="5"
                            android:layout_margin="2dp"
                            />
                        <TextView
                            android:id="@+id/commandLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Kreslení ON/OFF"
                            android:textSize="10sp"
                            android:layout_alignParentTop="true"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="6dp"
                            />

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/switch1"
                            android:allowUndo="false"
                            android:checked="true"
                            android:nestedScrollingEnabled="false"
                            android:singleLine="false"
                            android:splitTrack="false"
                            android:showText="false"
                             />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom|center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="X:"
                                android:id="@+id/twXinfo"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="3dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1000"
                                android:id="@+id/twX"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="2dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Y:"
                                android:id="@+id/twYinfo"
                                android:layout_marginLeft="3dp"
                                android:layout_gravity="bottom" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100"
                                android:id="@+id/twY"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="2dp" />
                        </TableRow>


                    </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

        </TableLayout>
    </FrameLayout>

</RelativeLayout>